<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="36dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/txtCodeHistoricoOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="ORDER #00000000"
            android:textColor="@color/material_dynamic_neutral40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtQuantiadeItemsHistoricoOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/roboto_bold"
            android:text="ITEMS"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtQuantiadeItemsHistoricoOrder"
            app:layout_constraintStart_toEndOf="@+id/txtQuantiadeItemsHistoricoOrder"
            app:layout_constraintTop_toTopOf="@+id/txtQuantiadeItemsHistoricoOrder"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto_bold"
            android:text="STATUS:"
            app:layout_constraintStart_toStartOf="@+id/txtCodeHistoricoOrder"
            app:layout_constraintTop_toBottomOf="@+id/txtCodeHistoricoOrder" />

        <TextView
            android:id="@+id/txtStatusShippedHistoricoOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="SHIPPED"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintStart_toEndOf="@+id/textView26"
            app:layout_constraintTop_toTopOf="@+id/textView26"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_bold"
            android:text="TOTAL:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtTotalOrderHistorico"
            app:layout_constraintEnd_toStartOf="@+id/txtTotalOrderHistorico"
            app:layout_constraintTop_toTopOf="@+id/txtTotalOrderHistorico"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtTotalOrderHistorico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/roboto_bold"
            android:text="999â‚¬"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnViewOrderDetailsHistorico"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:paddingLeft="12dp"
            android:paddingTop="0dp"
            android:paddingRight="12dp"
            android:paddingBottom="0dp"
            android:text="VIEW DETAILS"
            android:textSize="10sp"
            android:theme="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnOpenInvoiceDetails"
            app:layout_constraintEnd_toStartOf="@+id/btnOpenInvoiceDetails"
            app:layout_constraintTop_toTopOf="@+id/btnOpenInvoiceDetails" />

        <Button
            android:id="@+id/btnOpenInvoiceDetails"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#FFFFFF"
            android:paddingLeft="12dp"
            android:paddingTop="0dp"
            android:paddingRight="12dp"
            android:paddingBottom="0dp"
            android:text="VIEW INVOICE"
            android:textColor="@color/colorPrimaryVariant"
            android:textSize="10sp"
            android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtStatusShippedHistoricoOrder"
            app:strokeColor="@color/colorPrimaryVariant" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>